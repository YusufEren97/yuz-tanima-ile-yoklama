{
  "expo": {
    "name": "Yoklama Sistemi",
    "slug": "yoklama-sistemi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yusuferenseyrek.yoklama",
      "infoPlist": {
        "NSCameraUsageDescription": "Yoklama için yüz tanıma işlemi sırasında kamera kullanılmaktadır."
      }
    },
    "android": {
      "package": "com.yusuferenseyrek.yoklama",
      "adaptiveIcon": {
        "foregroundImage": "assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Yoklama için yüz tanıma işlemi sırasında kamera kullanılmaktadır."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "8c7ce190-c649-4965-b7f6-9cbdc6dd3f85"
      }
    }
  }
}
