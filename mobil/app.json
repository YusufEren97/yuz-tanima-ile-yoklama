{
  "expo": {
    "name": "Yoklama Sistemi",
    "slug": "yoklama-sistemi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yusuferenseyrek.yoklama",
      "infoPlist": {
        "NSCameraUsageDescription": "Yoklama için yüz tanıma işlemi sırasında kamera kullanılmaktadır."
      }
    },
    "android": {
      "package": "com.yusuferenseyrek.yoklama",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Yoklama için yüz tanıma işlemi sırasında kamera kullanılmaktadır.",
          "microphonePermission": "Video kaydı durumunda ses kaydı için kullanılır."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0c04b87c-6f83-4ffd-b333-4a02f2f0d4f0"
      }
    }
  }
}